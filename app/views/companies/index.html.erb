<!DOCTYPE html>
<html>
  <head>
    <style>
      body {background-color: #EAF6FF;}
      h1   {padding-left: 100px; color: #2A2A72;}
      p    {color: #232528;}
      div  {padding: 17px 100px;}
      h4   {padding-left: 100px;}
    </style>
  </head>
  <body>
    <h1>All Companies</h1>

    <ul>
      <% @companies.each do |company| %>
        <div class="company">
          <li class=company_<%= company.id %>>
            <h3><%= link_to company.name, company_path(company) %>:</h3>
            <%= link_to "Edit", edit_company_path(company) %>
            <%= link_to "Delete", company_path(company), method: "delete" %>
          </li>
          <hr>
        </div>
      <% end %>
    </ul>

    <h4><%= link_to "Dashboard", dashboard_path %></h4>
    <br>
  </body>
</html>
